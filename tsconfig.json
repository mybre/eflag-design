{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "esModuleInterop": true,
    "types": [
      "jest",
      "node",
      "@ant-design/cssinjs"
    ],
    "declaration": true,
    // TS 编译时跳过对 node_modules 依赖的检查
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      // ref: https://github.com/microsoft/TypeScript/issues/29808#issuecomment-540292885
      "@ant-design/cssinjs": [
        "node_modules/@ant-design/cssinjs"
      ],
      "@@/*": [
        ".dumi/tmp/*"
      ],
      "@eflag/design": [
        "packages/design/src/index.ts"
      ],
      "@eflag/design/es/*": [
        "packages/design/src/*"
      ],
      "@eflag/design/locale/*": [
        "packages/design/src/locale/*"
      ],
      "@eflag/icons": [
        "packages/icons/src/index.ts"
      ],
      "@eflag/icons/es/*": [
        "packages/icons/src/*"
      ],
      "@eflag/ui": [
        "packages/ui/src/index.ts"
      ],
      "@eflag/ui/es/*": [
        "packages/ui/src/*"
      ],
      "@eflag/ui/locale/*": [
        "packages/ui/src/locale/*"
      ],
      "@eflag/charts": [
        "packages/charts/src/index.ts"
      ],
      "@eflag/charts/es/*": [
        "packages/charts/src/*"
      ],
      "@eflag/util": [
        "packages/util/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "es",
    "lib",
    "dist",
    "scripts"
  ]
}